<dl>
    <dt>Rating: <%= review.rating %>/5</dt>
    <dt><%= username %></dt>
    <dt><%= created %></dt>
    <dd><%= review.description %></dd>
    <% if (review.user == current_user) %>
        <%= link_to 'Delete', [review.product, review],
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    <% end %>
</dl>